<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">

                <property name="driver" value="org.mariadb.jdbc.Driver"/>
                <property name="url" value="jdbc:mariadb://127.0.0.1:3306/tsahaylu_com?useUnicode=true&amp;autoReconnect=true&amp;failOverReadOnly=false&amp;characterEncoding=utf-8"/>
                <property name="username" value="root"/>
                <property name="password" value="admin)"/>
                <property name="poolPingEnabled" value="true"/>
                <property name="poolPingQuery" value="select 1"/>
                <property name="poolPingConnectionsNotUsedFor" value="3600000"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="com/tsahaylu/www/dao/mapper/UserMapper.xml"/>
        <mapper resource="com/tsahaylu/www/dao/mapper/CommentMapper.xml"/>
        <mapper resource="com/tsahaylu/www/dao/mapper/FriendMapper.xml"/>
        <mapper resource="com/tsahaylu/www/dao/mapper/FavURLMapper.xml"/>
        <mapper resource="com/tsahaylu/www/dao/mapper/GroupMapper.xml"/>
        <mapper resource="com/tsahaylu/www/dao/mapper/MessageMapper.xml"/>
        <mapper resource="com/tsahaylu/www/dao/mapper/URLInfoMapper.xml"/>
        <mapper resource="com/tsahaylu/www/dao/mapper/UserOpenIDMapper.xml"/>

    </mappers>
</configuration>
